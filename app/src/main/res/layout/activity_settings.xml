<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/theme_choose_button">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/theme_choose_text"
            android:layout_weight="2"
            android:text="@string/choose_theme"
            android:textSize="20sp"
            android:padding="30dp" />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/theme_choose_color"
            android:layout_gravity="center_vertical"
            android:contentDescription="@string/choose_theme"
            android:src="@color/red_delete"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/settings_divider_2"
        android:layout_below="@+id/theme_choose_button"
        android:background="@color/black"
        android:alpha=".7"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/licence_text_view"
        android:padding="30dp"
        android:textSize="20sp"
        android:layout_below="@+id/theme_choose_button"
        android:text="@string/open_source_licences"
        android:background="?attr/selectableItemBackground"/>

</RelativeLayout>